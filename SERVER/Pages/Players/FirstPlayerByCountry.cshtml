@page
@model SERVER.Pages.Players.FirstPlayerByCountryModel
@{
    ViewData["Title"] = "First Player By Country";
}

<div class="top-nav">
    <a href="/">Home</a>
    <a href="/About">About</a>
    <a href="/Players">Our Players</a>
    <a href="/Games">All Games</a>
    <a href="/">Services</a>
</div>

<div class="dashboard-container">
    <h2 class="dashboard-title">First Player From Each Country</h2>

    <table class="players-table">
        <thead>
            <tr>
                <th>Country</th>
                <th>Player Name</th>
                <th>First Game Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PlayersByCountry)
            {
                <tr>
                    <td>@item.Country</td>
                    <td>@item.PlayerName</td>
                    <td>@item.FirstGameDate</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
